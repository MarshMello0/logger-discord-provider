<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>JNogueira.Logger.Discord</RootNamespace>
    <Authors>Jorge Nogueira</Authors>
    <Company></Company>
    <Product>Logger Discord Provider</Product>
    <Description>A .NET Core Logger provider to send log messages to Discord.</Description>
    <PackageProjectUrl>https://github.com/jlnpinheiro/logger-discord-provider</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jlnpinheiro/logger-discord-provider</RepositoryUrl>
    <PackageTags>ILogger Logging .NET Core log Discord</PackageTags>
    <Version>2.3.0</Version>
    <AssemblyVersion>2.3.0.0</AssemblyVersion>
    <PackageReleaseNotes>Add UserClaimValueToDiscordField options</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="discord-webhook-client" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
  </ItemGroup>

</Project>
